{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",  // Path to your backend server entry point
      "use": "@vercel/node"
    },
    {
      "src": "public_html/**/*",  // Path to your static frontend files (this covers all files inside 'public_html')
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/server.js"  // Route all requests to your backend
    }
  ]
}
