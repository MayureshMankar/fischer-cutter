{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public_html/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)\.(html|css|js|png|jpg|jpeg|gif|svg|webp|woff|woff2|eot|ttf|otf|mp4|webm|json)",
      "dest": "/public_html/$1" 
    },
    {
      "src": "/(.*)",
      "dest": "/backend/server.js"
    }
  ]
}
